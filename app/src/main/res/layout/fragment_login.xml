<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" tools:context="com.foodapp.foodnearme.LoginFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_weight="0"
        android:id="@+id/topheaderview"
        android:background="@color/primColor"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Account Setup"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:paddingLeft="16dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffcccccc"
        android:layout_alignBottom="@id/topheaderview"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/bottomButtons"
        android:layout_alignParentBottom="true"
        android:background="#eee"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_black_36dp"
                android:id="@+id/textView3" />
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_black_36dp"
                android:id="@+id/textView4" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_below="@id/topheaderview"
    android:gravity="center"
    android:layout_above="@+id/bottomButtons"
    android:id="@+id/centerlayout">


    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:id="@+id/emailLogin"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:hint="Email id"
         />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="15"
        android:id="@+id/passLogin"
        android:hint="password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:visibility="gone"
        />



</LinearLayout>

</RelativeLayout>